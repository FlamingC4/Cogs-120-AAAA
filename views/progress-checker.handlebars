		  			<h1 class="title-text">{{name}}</h1> 
		  		</div>
		  		<div class="col-3">

		  	{{#if viewAlt}}
		  			<a href = "/edit-assignment"> <img src="/images/edit project.png" class="edit-button" id="edit-assignment"></a>
		  	{{else}}
		  			<a href = "/edit-assignment"> <img src="/images/edit project.png" class="edit-button"></a>
		  	{{/if}}
	  			</div>
	  	 </div>
  	</div>
	<div class="container">
		<!--<div id="myProgress">
		  <div id="myBar"></div>
		</div> 
		<button onclick="move()">Click Me</button>
